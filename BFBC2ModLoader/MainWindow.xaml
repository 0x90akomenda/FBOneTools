                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header=" Size" MinWidth="66" Binding="{Binding MapSize}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="Gray"/>
                                        <Setter Property="Foreground" Value="#FFE2E2E2"/>
                                        <Setter Property="BorderBrush" Value="#FF707070"/>
                                        <Setter Property="FontSize" Value="11" />
                                        <Setter Property="Height" Value="16"/>
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header=" Author" Visibility="Hidden" Binding="{Binding MapAuthor}" />
                            <DataGridTextColumn Header=" Link" Visibility="Hidden" Binding="{Binding MapLink}" />
                            <DataGridTextColumn Header=" Image" Visibility="Hidden" Binding="{Binding MapImage}" />
                            <DataGridTextColumn Header=" Req" Visibility="Hidden" Binding="{Binding MapReq}" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- BUTTONS -->

                    <Button x:Name="btnInstallMap" Background="#FF454545" Content="Install Map" Controls:ButtonHelper.CornerRadius="3" Foreground="#FFE2E2E2" FontWeight="Bold" FontSize="11" HorizontalAlignment="Left" Margin="8,0,0,4" Width="108" BorderBrush="#FF707070" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Bottom" Height="21" ToolTip="Install the selected map and its requirements" Click="BtnInstallMap_Click"/>
                    <Button x:Name="btnUpdateMaps" Background="#FF454545" Content="Update Maps" Controls:ButtonHelper.CornerRadius="3" Foreground="#FFE2E2E2" FontWeight="Bold" FontSize="11" HorizontalAlignment="Left" Margin="121,0,0,4" Width="108" BorderBrush="#FF707070" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Bottom" Height="21" ToolTip="Update all installed maps" Click="BtnUpdateMaps_Click"/>
                    <Button x:Name="btnShowInfo" Background="#FF454545" Content="Show Info" Controls:ButtonHelper.CornerRadius="3" Foreground="#FFE2E2E2" FontWeight="Bold" FontSize="11" HorizontalAlignment="Left" Margin="234,0,0,4" Width="108" BorderBrush="#FF707070" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Bottom" Height="21" ToolTip="Show information about map names" Click="BtnShowInfo_Click"/>
                    <Frame x:Name="frmImgBoxBackgroundC" Content="" HorizontalAlignment="Right" Height="82" Margin="0,4,5,0" VerticalAlignment="Top" Width="146" Background="#FF454545"/>
                    <Image x:Name="imgBoxMapBrowser" HorizontalAlignment="Right" Height="82" Margin="0,4,5,0" VerticalAlignment="Top" Width="146" StretchDirection="DownOnly"/>
                    <RichTextBox x:Name="txtBoxMapInfo" Margin="0,91,5,30" FontSize="11" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" SelectionBrush="#FF686868" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Right" Width="146" IsReadOnly="True" SelectionOpacity="2" Cursor="Arrow">
                        <FlowDocument LineHeight="1">
                            <Paragraph/>
                        </FlowDocument>
                    </RichTextBox>
                    <Controls:ProgressRing x:Name="progressRingMB" IsActive="False" Foreground="#FFE2E2E2" Height="19" Margin="0,0,8,5" Width="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" MinHeight="19" MinWidth="19"/>

                </Grid>
            </TabItem>
            <TabItem x:Name="tabSettings" Header="Settings" Background="#FF454545" BorderBrush="#FFE2E2E2" Foreground="#FFE2E2E2" FontSize="11">
                <Grid Background="#FF292929">

                    <!-- BUTTONS -->

                    <TextBox x:Name="txtBoxPathToPython" Height="25" Margin="103,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="365" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" Cursor="Arrow" IsReadOnly="True" IsUndoEnabled="False" HorizontalAlignment="Left"/>
                    <Label x:Name="lblPathToPython" Content="Path To Python:" HorizontalAlignment="Left" Margin="6,10,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                    <Button x:Name="btnSelectPathToPython" BorderBrush="#FF707070" Background="#FF454545" Content="Select" Controls:ButtonHelper.CornerRadius="3" Foreground="#FFE2E2E2" FontSize="11" HorizontalAlignment="Left" Height="21" Margin="480,12,0,0" Width="88" Style="{DynamicResource ButtonStyle1}" ToolTip="Select path to pythonw.exe" VerticalAlignment="Top" Click="BtnSelectPathToPython_Click"/>

                    <Button x:Name="btnCheckUpdate" Background="#FF454545" Content="Check for Updates" Controls:ButtonHelper.CornerRadius="3" Foreground="#FFE2E2E2" FontWeight="Bold" FontSize="11" HorizontalAlignment="Left" Margin="8,0,0,4" Width="108" BorderBrush="#FF707070" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Bottom" Height="21" ToolTip="Check for application and map updates" Click="BtnCheckUpdate_Click"/>
                    <CheckBox x:Name="chkBoxAutoCheckUpdates" Content="Automatic Update Check" HorizontalAlignment="Left" Margin="123,0,0,7" VerticalAlignment="Bottom" Foreground="#FFE2E2E2" Background="#FF454545" BorderBrush="#FF454545" ToolTip="Automatically check for application and map updates on startup" Style="{DynamicResource CheckBoxStyle1}" Checked="ChkBoxAutoCheckUpdates_Checked" Unchecked="ChkBoxAutoCheckUpdates_Unchecked" />

                </Grid>
            </TabItem>
        </TabControl>
        <RichTextBox x:Name="txtBoxEventLog" Height="45" Margin="5,0,5,5" VerticalAlignment="Bottom" FontSize="11" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" SelectionBrush="#FF686868" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" Cursor="Arrow">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Welcome to BFBC2 Mod Loader!&#x0a;"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnStartGame" Background="#FF454545" Content="Start Game" Controls:ButtonHelper.CornerRadius="3" Foreground="#FFE2E2E2" FontWeight="Bold" FontSize="11" HorizontalAlignment="Right" Margin="0,6,10,0" Width="108" BorderBrush="#FF707070" Style="{DynamicResource ButtonStyle1}" VerticalAlignment="Top" Height="21" ToolTip="Close the application and start the game" Click="BtnStartGame_Click"/>

    </Grid>
</Controls:MetroWindow>
