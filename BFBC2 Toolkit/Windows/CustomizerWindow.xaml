                                <Label x:Name="lblSatG" Content="G" HorizontalAlignment="Left" Margin="290,5,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxSatG" HorizontalAlignment="Left" Height="23" Margin="313,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblSatB" Content="B" HorizontalAlignment="Left" Margin="474,5,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxSatB" HorizontalAlignment="Left" Height="23" Margin="496,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblContrast" Content="Contrast" HorizontalAlignment="Left" Margin="5,36,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <Label x:Name="lblConR" Content="R" HorizontalAlignment="Left" Margin="107,36,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxConR" HorizontalAlignment="Left" Height="23" Margin="129,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblConG" Content="G" HorizontalAlignment="Left" Margin="290,36,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxConG" HorizontalAlignment="Left" Height="23" Margin="313,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblConB" Content="B" HorizontalAlignment="Left" Margin="474,36,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxConB" HorizontalAlignment="Left" Height="23" Margin="496,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblBrightness" Content="Brightness" HorizontalAlignment="Left" Margin="5,67,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <Label x:Name="lblBrightR" Content="R" HorizontalAlignment="Left" Margin="107,67,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxBrightR" HorizontalAlignment="Left" Height="23" Margin="129,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblBrightG" Content="G" HorizontalAlignment="Left" Margin="290,67,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxBrightG" HorizontalAlignment="Left" Height="23" Margin="313,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblBrightB" Content="B" HorizontalAlignment="Left" Margin="474,67,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxBrightB" HorizontalAlignment="Left" Height="23" Margin="496,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />

                            </Grid>
                        </TabItem>

                        <!-- TabItem Sun -->

                        <TabItem x:Name="tabSun" Header="Sun" Background="#FF454545" BorderBrush="#FFE2E2E2" Foreground="#FFE2E2E2" FontSize="11">
                            <Grid Background="#FF292929">
                                <Label x:Name="lblSunTheta" Content="Theta" HorizontalAlignment="Left" Margin="62,5,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxSunTheta" HorizontalAlignment="Left" Height="23" Margin="106,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblSunPhi" Content="Phi" HorizontalAlignment="Left" Margin="269,5,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11" Width="26"/>
                                <TextBox x:Name="txtBoxSunPhi" HorizontalAlignment="Left" Height="23" Margin="300,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblSunSize" Content="Size" HorizontalAlignment="Left" Margin="460,5,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
