                    <Label x:Name="lblMapNameValue" Content="Placeholder" HorizontalAlignment="Left" Margin="428,0,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11" Width="240"/>

                    <TabControl Name="tabMapMain" Height="Auto" BorderBrush="#FF707070" Background="#FF292929" Foreground="#FFE2E2E2" Margin="5,26,5,5">

                        <!-- TabItem Post Processing -->

