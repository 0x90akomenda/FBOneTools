                                <Label x:Name="lblSunColorR" Content="R" HorizontalAlignment="Left" Margin="84,36,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
                                <TextBox x:Name="txtBoxSunColorR" HorizontalAlignment="Left" Height="23" Margin="106,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Background="#FF454545" BorderBrush="#FF454545" Foreground="#FFE2E2E2" FontSize="11" />
                                <Label x:Name="lblSunColorG" Content="G" HorizontalAlignment="Left" Margin="277,36,0,0" VerticalAlignment="Top" Foreground="#FFE2E2E2" FontSize="11"/>
