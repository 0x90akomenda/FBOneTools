        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BFBC2_Toolkit.Windows"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="BFBC2 Customizer" WindowTitleBrush="#FF1F1F1F" Background="#FF292929" TitleForeground="#FFE2E2E2" BorderBrush="#FF141414" WindowStartupLocation="CenterOwner" ResizeBorderThickness="2,3,2,2" TitlebarHeight="20" TitleCaps="False" TitleCharacterCasing="Normal" FontWeight="Bold" ScrollViewer.VerticalScrollBarVisibility="Disabled" Width="700" Height="430" WindowStyle="ToolWindow" ResizeMode="NoResize" Topmost="True" Loaded="MetroWindow_Loaded" KeyUp="MetroWindow_KeyUp">
    <Grid>
        <TabControl Name="tabMain" Height="Auto" BorderBrush="#FF707070" Background="#FF292929" Foreground="#FFE2E2E2" Margin="5,12,5,36">

            <!-- TabItem Map -->

            <TabItem x:Name="tabMap" Header="Map" Background="#FF454545" BorderBrush="#FFE2E2E2" Foreground="#FFE2E2E2" FontSize="11">
